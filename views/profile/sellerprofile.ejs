<%- include("../partials/header")%>
<%- include("../partials/navbar")%>

<div class="container" style="margin-top:5rem;width:80vw;margin-bottom: 18rem;">
  
            <form class="validated-form" action="/#" method="POST" style="max-width:70%;margin:10px auto" novalidate>
                <%- include("../partials/flash")%>
                <h4 class="display-4">Your Profile</h4>
                <div class="row mt-3">

                    <div class="mb-3 col-lg-6">
                      <label for="firstname" class="form-label">Firstname</label>
                      <input type="text" class="form-control" id="firstname" value="<%=seller.firstname%>" name="firstname" required>
                      <div class="valid-feedback">
                        Looks good!
                      </div>
                    </div>
                  
                    <div class="mb-3 col-lg-6">
                      <label for="lastname" class="form-label">Lastname</label>
                      <input type="text" class="form-control" id="lastname" value="<%=seller.lastname%>" name="lastname" required>
                      <div class="valid-feedback">
                        Looks good!
                      </div>
                    </div>

                </div>


                <div class="mb-3">
                  <label for="username" class="form-label">Username</label>
                  <input type="text" class="form-control" id="username" placeholder="<%=seller.username%>" name="username" disabled  required>
                  <div class="valid-feedback">
                    Looks good!
                  </div>
                </div>
                <div class="mb-3">
                  <label for="email" class="form-label">Email</label>
                  <input type="email" class="form-control" id="email" value="<%=seller.email%>" name="email" required>
                  <div class="valid-feedback">
                    Looks good!
                  </div>
                </div>
                
                  <div class="mb-3">
                    <label for="address" class="form-label">Address</label>
                    <input type="text" class="form-control"  id="address" placeholder="<%=seller.address%>" name="address" disabled required>
                    <div class="valid-feedback">
                      Looks good!
                    </div>
                  </div>
                  <div class="row"> 
                    <div class="mb-3 col-lg-6">
                      <label for="state" class="form-label">State</label>
                      <input type="text" class="form-control" id="state" placeholder="<%=seller.state%>" name="state" disabled required>
                      <div class="valid-feedback">
                        Looks good!
                      </div>
                    </div>
                    <div class="mb-3 col-lg-6">
                      <label for="pincode" class="form-label">Pincode</label>
                      <input type="number"  class="form-control" id="pincode" placeholder="<%=seller.pincode%>" name="pincode" disabled >
                      <div class="valid-feedback">
                        Looks good!
                      </div>
                    </div>
                  </div>
                  
                  <br>
               
                <button type="button" class="btn btn-warning">Update</button>
              </form>
        
   
</div>


<%- include("../partials/footer")%>